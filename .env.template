# Environment Configuration for DEAAP
# Copy this file to .env and customize the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your_secure_postgres_password
REDIS_PASSWORD=your_secure_redis_password

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
BLOCKCHAIN_NETWORK_ID=31337
BLOCKCHAIN_CHAIN_ID=31337

# Smart Contract Addresses (will be populated after deployment)
CONSENSUS_CONTRACT_ADDRESS=
VALIDATOR_REGISTRY_ADDRESS=
DATA_AUTHORIZATION_CONTRACT_ADDRESS=

# =============================================================================
# BU VALIDATOR CONFIGURATION
# =============================================================================
# Default BU configuration - create separate .env files for each BU
BU_NAME=default-bu
BU_WALLET_ADDRESS=
BU_PRIVATE_KEY_PATH=/run/secrets/bu_private_key

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini

# Hugging Face Configuration (alternative)
HUGGINGFACE_API_KEY=your_huggingface_api_key
HUGGINGFACE_MODEL=meta-llama/Llama-2-7b-chat-hf

# =============================================================================
# EMBEDDING MODEL CONFIGURATION
# =============================================================================
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDING_DIMENSION=768

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
# Document Processing
MAX_FILE_SIZE=100MB
SUPPORTED_FORMATS=pdf,docx,txt
MAX_PAGES_PER_REQUEST=50

# Chunking Configuration
DEFAULT_CHUNK_SIZE=2100
DEFAULT_OVERLAP=200
CHUNKER_METHODS=semantic,fixed_token,recursive,markdown

# Synthetic Data Generation
SYNTHETIC_RATIO=3
QUALITY_THRESHOLD=0.8

# =============================================================================
# CONSENSUS CONFIGURATION
# =============================================================================
MIN_VALIDATORS=3
CONSENSUS_THRESHOLD=0.67
VALIDATION_TIMEOUT=300
DISPUTE_WINDOW=3600

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_32_character_encryption_key

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
METRICS_ENABLED=true
AUDIT_ENABLED=true

# =============================================================================
# RESOURCE LIMITS
# =============================================================================
# Agent Configuration
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT=3600
MODEL_CACHE_SIZE=50GB

# API Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# =============================================================================
# DEVELOPMENT/PRODUCTION MODES
# =============================================================================
# Set to 'development' or 'production'
DEPLOYMENT_MODE=development

# Mock validator settings (development mode)
MOCK_APPROVAL_RATE=0.8
MOCK_RESPONSE_DELAY=5

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Proxy settings (if required)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1,172.20.0.0/16

# Container registry (if using private registry)
CONTAINER_REGISTRY=
REGISTRY_USERNAME=
REGISTRY_PASSWORD=
